---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import TechnicalSpecs from "../components/TechnicalSpecs.astro";
import UserDemo from "../components/UserDemo.astro";
import FinanceDemo from "../components/FinanceDemo.astro";
import SalesDemo from "../components/SalesDemo.astro";
import ProductDemo from "../components/ProductDemo.astro";
import ConfigDemo from "../components/ConfigDemo.astro";
import CloudSync from "../components/CloudSync.astro";
import DownloadSection from "../components/DownloadSection.astro";
import "../styles/global.css";
---

<Layout title="GymTrack | Demo Interactiva de Gestión de Gimnasios">
	<main>
		<Hero />

		<div class="divider"></div>

		<TechnicalSpecs />

		<div class="divider"></div>

		<UserDemo />

		<div class="divider"></div>

		<FinanceDemo />

		<div class="divider"></div>

		<SalesDemo />

		<div class="divider"></div>

		<ProductDemo />

		<div class="divider"></div>

		<ConfigDemo />

		<div class="divider"></div>

		<CloudSync />

		<div class="divider"></div>

		<DownloadSection />

		<div class="divider"></div>

		<section id="cta" class="container text-center pt-20">
			<div
				class="glass p-16 bg-gradient-to-b from-primary/5 to-transparent"
			>
				<h2 class="text-5xl font-bold mb-6">
					¿Listo para transformar tu gimnasio?
				</h2>
				<p class="text-xl text-muted mb-10 max-w-2xl mx-auto">
					Únete a cientos de gimnasios que ya confían en GymTrack.
					Comienza tu prueba gratuita hoy mismo.
				</p>
				<div class="cta-buttons">
					<a
						href="#download"
						class="btn btn-primary px-12 py-4 text-xl"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
						>
							<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
							></path>
							<polyline points="7 10 12 15 17 10"></polyline>
							<line x1="12" y1="15" x2="12" y2="3"></line>
						</svg>
						Descargar Prueba Gratis
					</a>
					<a
						href="mailto:hola@gymtrack.com"
						class="btn glass px-12 py-4 text-xl">Contactar Ventas</a
					>
				</div>
			</div>
		</section>
	</main>

	<footer class="container py-12 text-center text-muted border-t mt-20">
		<p>
			&copy; 2026 GymTrack SAAS. La plataforma definitiva para gimnasios
			modernos.
		</p>
	</footer>
</Layout>

<style>
	.divider {
		height: 1px;
		background: linear-gradient(
			90deg,
			transparent,
			var(--border),
			transparent
		);
		margin: 8rem 0;
	}
	.text-5xl {
		font-size: 3.5rem;
	}
	.text-center {
		text-align: center;
	}
	.p-16 {
		padding: 4rem;
	}
	.pt-20 {
		padding-top: 5rem;
	}
	.mt-20 {
		margin-top: 5rem;
	}
	.py-12 {
		padding-top: 3rem;
		padding-bottom: 3rem;
	}
	.border-t {
		border-top: 1px solid var(--border);
	}
	.mx-auto {
		margin-left: auto;
		margin-right: auto;
	}
	.px-12 {
		padding-left: 3rem;
		padding-right: 3rem;
	}
	.py-4 {
		padding-top: 1rem;
		padding-bottom: 1rem;
	}
	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		align-items: center;
		flex-wrap: wrap;
	}
	.cta-buttons .btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
	}
	@media (max-width: 768px) {
		.cta-buttons {
			flex-direction: column;
		}
		.cta-buttons .btn {
			width: 100%;
			justify-content: center;
		}
	}
</style>
