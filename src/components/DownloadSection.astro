        font-size: 1.25rem;
    }

    .max-w-2xl {
        max-width: 42rem;
    }

    .mx-auto {
        margin-left: auto;
        margin-right: auto;
    }

    .download-content {
        display: grid;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .download-card {
        padding: 3rem;
        text-align: center;
        border: 1px solid var(--border);
        transition: all 0.3s ease;
        animation: fadeInUp 0.8s ease-out 0.2s both;
    }

    .download-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }

    .card-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, var(--primary), var(--accent));
        border-radius: 50%;
        margin-bottom: 2rem;
        animation: float 3s ease-in-out infinite;
    }

    .card-icon svg {
        color: white;
    }

    .features-list {
        text-align: left;
        max-width: 400px;
        margin: 0 auto;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--border);
        transition: all 0.3s ease;
    }

    .feature-item:last-child {
        border-bottom: none;
    }

    .feature-item:hover {
        padding-left: 0.5rem;
        color: var(--primary);
    }

    .check-icon {
        color: var(--primary);
        flex-shrink: 0;
    }

    .btn-large {
        padding: 1.25rem 3rem;
        font-size: 1.125rem;
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        margin-top: 1rem;
        transition: all 0.3s ease;
    }

    .btn-large:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 30px rgba(var(--primary-rgb), 0.4);
    }

    .download-note {
        margin-top: 1.5rem;
        font-size: 0.875rem;
        color: var(--muted);
    }

    .info-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .info-card {
        padding: 2rem;
        text-align: center;
        border: 1px solid var(--border);
        transition: all 0.3s ease;
        animation: fadeInUp 0.8s ease-out 0.4s both;
    }

    .info-card:hover {
        transform: translateY(-3px);
        border-color: var(--primary);
    }

    .info-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .info-card h4 {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .info-card p {
        color: var(--muted);
        font-size: 0.875rem;
    }

    .system-requirements {
        padding: 2.5rem;
        border: 1px solid var(--border);
        animation: fadeInUp 0.8s ease-out 0.6s both;
    }

    .system-requirements h3 {
        text-align: center;
    }

    .requirements-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .requirement {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 1rem;
        background: var(--bg-secondary);
        border-radius: 0.5rem;
        border-left: 3px solid var(--primary);
    }

    .requirement strong {
        color: var(--primary);
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .requirement span {
        color: var(--text);
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }

    @keyframes pulse {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0.8;
        }
    }

    @media (max-width: 768px) {
        .text-5xl {
            font-size: 2rem;
        }

        .download-card {
            padding: 2rem;
        }

        .card-icon {
            width: 80px;
            height: 80px;
        }

        .card-icon svg {
            width: 40px;
            height: 40px;
        }

        .requirements-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
