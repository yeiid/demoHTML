---

<section id="sales-demo" class="container">
    <div class="text-center mb-16">
        <h2 class="text-5xl font-bold mb-4">
            Punto de <span class="gradient-text">Venta</span>
        </h2>
        <p class="text-muted max-w-2xl mx-auto">
            Sistema POS integrado con facturaci√≥n autom√°tica y control de
            inventario en tiempo real.
        </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Product Grid -->
        <div class="lg:col-span-2">
            <h3 class="text-xl font-semibold mb-4">Productos Disponibles</h3>
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
                {
                    sampleProducts.map((product) => (
                        <div class="product-card glass">
                            <span class="product-icon">{product.icon}</span>
                            <span class="product-name">{product.name}</span>
                            <span class="product-price">
                                ${product.price.toFixed(2)}
                            </span>
                        </div>
                    ))
                }
            </div>

            <!-- Features -->
            <div class="mt-8 glass p-6">
                <h4 class="font-semibold mb-4">Funcionalidades POS</h4>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                    <div class="feature-item-small">
                        <span>üí≥</span>
                        <span>M√∫ltiples m√©todos de pago</span>
                    </div>
                    <div class="feature-item-small">
                        <span>üßæ</span>
                        <span>Facturaci√≥n autom√°tica</span>
                    </div>
                    <div class="feature-item-small">
                        <span>üìä</span>
                        <span>Reportes de ventas diarios</span>
                    </div>
                    <div class="feature-item-small">
                        <span>üîÑ</span>
                        <span>Sincronizaci√≥n con inventario</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Receipt Preview -->
        <div class="glass p-6 flex flex-col">
            <h3 class="font-bold mb-4 flex items-center justify-between">
                <span>Recibo de Venta</span>
                <span class="text-xs text-muted">#0042</span>
            </h3>

            <div class="flex-grow space-y-3 mb-6">
                {
                    sampleReceipt.map((item) => (
                        <div class="receipt-item">
                            <span>{item.name}</span>
                            <span class="font-semibold">
                                ${item.price.toFixed(2)}
                            </span>
                        </div>
                    ))
                }
            </div>

            <div class="border-t border-white/10 pt-4 space-y-2">
                <div class="receipt-row">
                    <span>Subtotal</span>
                    <span>${subtotal.toFixed(2)}</span>
                </div>
                <div class="receipt-row">
                    <span>IVA (16%)</span>
                    <span>${tax.toFixed(2)}</span>
                </div>
                <div class="receipt-total">
                    <span>Total</span>
                    <span class="text-primary">${total.toFixed(2)}</span>
                </div>
            </div>

            <div class="mt-4 pt-4 border-t border-white/5">
                <div class="payment-info">
