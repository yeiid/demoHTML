                    <div class="font-semibold">Efectivo</div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .lg\:col-span-2 {
        grid-column: span 2 / span 2;
    }

    .grid-cols-4 {
        grid-template-columns: repeat(4, minmax(0, 1fr));
    }

    .grid-cols-2 {
        grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .product-card {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        text-align: center;
        transition: all 0.3s ease;
        cursor: default;
    }

    .product-card:hover {
        border-color: var(--primary);
        transform: translateY(-3px);
    }

    .product-icon {
        font-size: 2.5rem;
    }

    .product-name {
        font-size: 0.875rem;
        font-weight: 600;
    }

    .product-price {
        color: var(--secondary);
        font-weight: 700;
        font-size: 1.1rem;
    }

    .feature-item-small {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        padding: 0.5rem;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 0.5rem;
    }

    .receipt-item {
        display: flex;
        justify-content: space-between;
        font-size: 0.9rem;
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .receipt-row {
        display: flex;
        justify-content: space-between;
        font-size: 0.875rem;
        color: var(--muted);
    }

    .receipt-total {
        display: flex;
        justify-content: space-between;
        font-size: 1.25rem;
        font-weight: 700;
        padding-top: 0.5rem;
        margin-top: 0.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .payment-info {
        text-align: center;
    }

    .flex-grow {
        flex-grow: 1;
    }

    .mb-16 {
        margin-bottom: 4rem;
    }

    @media (max-width: 1024px) {
        .lg\:col-span-2 {
            grid-column: span 1;
        }
    }

    @media (max-width: 640px) {
        .grid-cols-4 {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }
</style>
